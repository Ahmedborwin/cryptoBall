{
  "name": "crypto-ball",
  "license": "MIT",
  "version": "0.2.0",
  "description": "Tooling for interacting with Chainlink Functions",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "eject": "react-scripts eject",
    "prepare": "husky install",
    "compile": "hardhat compile",
    "test": "npm run test:unit",
    "test:unit": "hardhat test test/unit/*.spec.js",
    "startLocalFunctionsTestnet": "node scripts/startLocalFunctionsTestnet.js",
    "deployConsumer": "npx hardhat run deploy/01-deploy-Consumer.js",
    "listen": "nodemon scripts/listen.js",
    "lint": "npm run lint:contracts && npm run format:check",
    "lint:fix": "solhint 'contracts/**/*.sol' --fix",
    "lint:contracts": "solhint 'contracts/*.sol'",
    "lint:contracts:fix": "solhint 'contracts/**/*.sol' --fix",
    "format:check": "prettier --check .",
    "format:fix": "prettier --write ."
  },
  "dependencies": {
    "@alchemy/aa-alchemy": "^3.13.0",
    "@chainlink/contracts": "^1.0.0",
    "@chainlink/env-enc": "^1.0.5",
    "@chainlink/functions-toolkit": "^0.2.7",
    "@ethersproject/abi": "^5.7.0",
    "@ethersproject/providers": "^5.7.1",
    "@nomicfoundation/hardhat-chai-matchers": "^1.0.3",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.6",
    "@nomicfoundation/hardhat-toolbox": "^2.0.0",
    "@nomiclabs/hardhat-ethers": "^2.2.2",
    "@openzeppelin/contracts-upgradeable": "^4.9.3",
    "@rainbow-me/rainbowkit": "^2.0.6",
    "@tanstack/react-query": "^5.35.1",
    "@typechain/ethers-v5": "^10.1.0",
    "@typechain/hardhat": "^6.1.3",
    "alchemy-sdk": "^3.3.1",
    "axios": "^1.1.3",
    "chai": "^4.3.6",
    "eth-crypto": "^2.4.0",
    "ethers": "^5.7.2",
    "framer-motion": "^11.1.8",
    "hardhat": "^2.17.3",
    "hardhat-contract-sizer": "^2.6.1",
    "hardhat-gas-reporter": "^1.0.9",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "nodemon": "^3.0.1",
    "ora": "5.4.1",
    "prettier": "^2.7.1",
    "prettier-plugin-solidity": "^1.0.0-beta.24",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.23.0",
    "react-scripts": "^5.0.1",
    "readline": "^1.3.0",
    "solhint": "^3.3.7",
    "solhint-plugin-prettier": "^0.0.5",
    "solidity-coverage": "^0.8.2",
    "styled-components": "^6.1.9",
    "typechain": "^8.1.0",
    "viem": "^2.9.32",
    "wagmi": "^2.8.1"
  },
  "lint-staged": {
    "*.{js,json,yml,yaml}": [
      "prettier --write"
    ],
    "*.sol": [
      "prettier --write",
      "solhint"
    ]
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": false,
    "singleQuote": false,
    "printWidth": 120
  },
  "devDependencies": {
    "@pinata/sdk": "^2.1.0",
    "tailwindcss": "^3.4.3"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
